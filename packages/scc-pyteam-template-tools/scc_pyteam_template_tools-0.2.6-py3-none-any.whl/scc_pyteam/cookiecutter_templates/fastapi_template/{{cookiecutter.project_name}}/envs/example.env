PROJECT_NAME={{ cookiecutter.project_name }}
PROJECT_DESCRIPTION={{ cookiecutter.project_short_description }}

# Service proxy
{% if cookiecutter.use_proxy == "yes" %}
SERVICE_USE_PROXY=True
{% else %}
SERVICE_USE_PROXY=False
{% endif %}
SERVICE_PROXY_ADDR={{cookiecutter.proxy_address}}
SERVICE_NO_PROXY={{cookiecutter.no_proxy}}


# MongoDB
{% if cookiecutter.use_mongo_database == "yes" %}
DB_MONGO_ENABLE=True
{% else %}
DB_MONGO_ENABLE=False
{% endif %}
DB_MONGO_HOST=localhost
DB_MONGO_PORT=27017
DB_MONGO_USERNAME=username
DB_MONGO_PASSWORD=password
DB_MONGO_DB_NAME=default


# Redis
{% if cookiecutter.use_redis == "yes" %}
REDIS_ENABLE=True
{% else %}
REDIS_ENABLE=False
{% endif %}
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_AUTH=password
