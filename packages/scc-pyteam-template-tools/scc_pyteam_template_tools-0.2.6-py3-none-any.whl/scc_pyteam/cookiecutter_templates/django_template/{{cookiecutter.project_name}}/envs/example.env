PROJECT_NAME={{ cookiecutter.project_name }}
PROJECT_DESCRIPTION={{ cookiecutter.project_short_description }}


DJANGO_DEBUG=True
DJANGO_SECRET_KEY=hello-here-is-the-super-secret-key


# Service proxy
{% if cookiecutter.use_proxy == "yes" %}
SERVICE_USE_PROXY=True
{% else %}
SERVICE_USE_PROXY=False
{% endif %}
SERVICE_PROXY_ADDR={{cookiecutter.proxy_address}}
SERVICE_NO_PROXY={{cookiecutter.no_proxy}}


# Postgres
{% if cookiecutter.use_postgres_database == "yes" %}
DJANGO_DB_POSTGRES_ENABLE=True
{% else %}
DJANGO_DB_POSTGRES_ENABLE=False
{% endif %}
DJANGO_DB_POSTGRES_HOST=localhost
DJANGO_DB_POSTGRES_PORT=5432
DJANGO_DB_POSTGRES_USERNAME=username
DJANGO_DB_POSTGRES_PASSWORD=password
DJANGO_DB_POSTGRES_NAME=dev


DJANGO_DB_SQLITE3_ENABLE=False
DJANGO_DB_SQLITE3_NAME=db.sqlite3


# Redis
{% if cookiecutter.use_redis == "yes" %}
REDIS_ENABLE=True
{% else %}
REDIS_ENABLE=False
{% endif %}
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_AUTH=password
