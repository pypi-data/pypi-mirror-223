#!/bin/bash

if [ "$1" != "" ]; then

    echo ONE FILE
    outname=`basename $1 .avi`
    ls -1 $1 |  xargs -n 1 -I III ffmpeg -i III -c:v copy -c:a copy repoutname.avi

else

    echo ALL AVI but not rep...avi
    ls -1 *avi | grep -ve  "^rep" | xargs -n 1 -I III ffmpeg -i III -c:v copy -c:a copy repIII

fi
