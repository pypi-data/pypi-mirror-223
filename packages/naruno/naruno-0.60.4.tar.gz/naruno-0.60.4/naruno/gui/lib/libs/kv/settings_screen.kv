#: import gch kivy.utils.get_color_from_hex


<SettingsScreen>

    ScrollView:

        MDList:
            spacing: dp(10)

            SettingsBox:





<SettingsBox>
    adaptive_height: True


    canvas.before:

        Rectangle:
            size: self.size
            pos: self.pos

    MDGridLayout:
        size_hint_x: 1
        size_hint_y: None
        height: self.minimum_height
        padding: dp(10)
        spacing: 10
        cols: 2

        NarunoLabel:
            text: "DEBUG MODE"
            halign: "center"
            font_style: "Button"
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            MDSwitch:
                active: root.d_first_status
                on_active: root.D_Status_Changing(self, self.active)


        NarunoLabel:
            text: "TEST MODE"
            halign: "center"
            font_style: "Button"
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            MDSwitch:
                active: root.t_first_status
                on_active: root.T_Status_Changing(self, self.active)


        NarunoLabel:
            text: "MUTE NOTIFICATIONS"
            halign: "center"
            font_style: "Button"
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            MDSwitch:
                active: root.mt_first_status
                on_active: root.MT_Status_Changing(self, self.active)


        NarunoLabel:
            text: "DARK MODE"
            halign: "center"
            font_style: "Button"
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            MDSwitch:
                active: root.dark_mode_first_status
                on_active: root.DARK_MODE_Status_Changing(self, self.active)



        NarunoLabel:
            text: "BAKLAVA"
            halign: "center"
            font_style: "Button"
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            MDSwitch:
                active: root.baklava_first_status
                on_active: root.BAKLAVA_Status_Changing(self, self.active)

        AnchorLayout:
            size_hint_y: None
            height: but1.height
            MDRoundFlatIconButton:
                id: but1
                icon: "export"
                on_press: root.export_bt()
                text: "Export"
                halign: "right"
                font_style: "Button"

        AnchorLayout:
            size_hint_y: None
            height: but2.height
            MDRoundFlatIconButton:
                id: but2
                icon: "import"
                on_press: root.import_bt()
                text: "Import"
                halign: "right"
                font_style: "Button"
