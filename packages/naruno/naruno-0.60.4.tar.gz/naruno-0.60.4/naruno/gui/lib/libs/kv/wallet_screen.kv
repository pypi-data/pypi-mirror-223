#: import gch kivy.utils.get_color_from_hex


<WalletScreen>

    ScrollView:

        MDList:
            spacing: dp(10)

            WalletBox:
                text : "Balance"



<WalletBox>
    adaptive_height: True



    canvas.before:

        Rectangle:
            size: self.size
            pos: self.pos

    MDGridLayout:
        size_hint_x: 1
        size_hint_y: None
        height: self.minimum_height
        padding: dp(10)
        cols:2
        spacing: 10

        AnchorLayout:
            size_hint_y: None
            height: but1.height
            MDRoundFlatIconButton:
                id: but1
                icon: "wallet-outline"
                on_press: root.show_example_list_bottom_sheet()
                text:  "Wallets"
                halign: "right"
                font_style: "Button"

        AnchorLayout:
            size_hint_y: None
            height: but2.height
            MDRoundFlatIconButton:
                id: but2
                icon: "wallet-plus-outline"
                on_press: root.show_wallet_alert_dialog()
                text: "Create Wallet"
                halign: "right"
                font_style: "Button"

        AnchorLayout:
            size_hint_y: None
            height: but3.height
            MDRoundFlatIconButton:
                id: but3
                icon: "safe"
                on_press: root.reflesh_balance()
                text: root.text
                halign: "right"
                font_style: "Button"

        AnchorLayout:
            size_hint_y: None
            height: but2.height
            MDRoundFlatIconButton:
                id: but2
                icon: "delete"
                on_press: root.show_delete_wallet_alert_dialog()
                text_color: 1, 0, 0, 1
                text: "Delete Wallet"
                halign: "right"
                font_style: "Button"
        AnchorLayout:
            size_hint_y: None
            height: but4.height
            MDRoundFlatIconButton:
                id: but4
                icon: "content-copy"
                on_press: root.wallet_copy()
                text: "Copy the your Address"
                halign: "right"
                font_style: "Button"
        AnchorLayout:
            size_hint_y: None
            height: but5.height
            MDRoundFlatIconButton:
                id: but5
                icon: "qrcode"
                on_press: root.wallet_qr()
                text: "QR Code of your Address"
                halign: "right"
                font_style: "Button"
