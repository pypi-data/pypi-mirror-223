#: import environ os.environ
#: import gch kivy.utils.get_color_from_hex


<NarunoWelcomeScreen>
    canvas:

        Rectangle:
            pos: self.pos
            size: self.size



    MDGridLayout:
        padding: dp(50)
        cols: 1

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            Image:
                source: f"{environ['NARUNO_ROOT']}/gui/lib/images/logo.ico"



        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'
            MDProgressBar:
                id : pb
                min :0
                max :100
                value: 0
