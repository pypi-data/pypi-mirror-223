<odoo>
<record id="psychology_evaluation_view_tree" model="ir.ui.view">
    <field name="name">psychology.evaluation tree</field>
    <field name="model">psychology.evaluation</field>
    <field name="arch" type="xml">
        <tree
                decoration-info="state == 'draft'"
                decoration-success="state == 'done'"
                decoration-muted="state == 'cancel'"
            >
            <field name="id" optional="hide" />
            <field name="display_name" string="# Document" />
            <field
                    name="company_id"
                    groups="base.group_multi_company"
                    optional="hide"
                />
            <field name="client_id" />
            <field name="institution_id" />
            <field name="batch_id" />
            <field name="purpose_id" optional="show" />
            <field name="type_id" optional="show" />
            <field name="psychogram_id" optional="show" />
            <field name="report_type_id" />
            <field name="deadline_id" />
            <field name="date_start" />
            <field
                    name="initial_recommender_id"
                    widget="many2one_avatar_user"
                    optional="hide"
                />
            <field name="initial_recommendation_deadline" optional="hide" />
            <field
                    name="psychologist_id"
                    widget="many2one_avatar_user"
                    optional="show"
                />
            <field name="evaluation_deadline" optional="hide" />
            <field name="reviewer_id" widget="many2one_avatar_user" optional="hide" />
            <field name="review_deadline" optional="hide" />
            <field name="editor_id" widget="many2one_avatar_user" optional="hide" />
            <field name="editing_deadline" optional="hide" />
            <field name="user_id" widget="many2one_avatar_user" optional="show" />
            <field name="report_deadline" optional="show" />
            <field name="date_report" />
            <field
                    name="state"
                    widget="badge"
                    decoration-info="state == 'draft'"
                    decoration-success="state == 'done'"
                    decoration-muted="state == 'cancel'"
                />
        </tree>
    </field>
</record>

